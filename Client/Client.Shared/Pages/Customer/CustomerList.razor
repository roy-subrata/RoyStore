@page "/customers"
@inherits LayoutComponentBase

@using Client.Shared.Pages.Shared
@using Client.Shared.Services
@using MudBlazor
@using static Client.Shared.Pages.Customer.CustomerForm

@inject IDialogService DialogService
@inject CustomerService CustomerService
@inject ISnackbar Snackbar

<MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
    <!-- Search -->
    <MudTextField @bind-Value="_searchText" Placeholder="Search customers..." Variant="Variant.Outlined"
        Margin="Margin.Dense" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" Immediate="true"
        DebounceInterval="500" OnDebounceIntervalElapsed="OnSearchChanged" Class="w-50" />

    <!-- Actions -->
    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Start" Class="w-50" Justify="Justify.FlexEnd">
        <MudButton Variant="Variant.Outlined" Color="Color.Default" StartIcon="@Icons.Material.Filled.Print"
            OnClick="Print">
            Print
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add"
            OnClick="OpenAddDialog">
            Add New
        </MudButton>
    </MudStack>
</MudStack>


<MudTable @ref="_table" class="mt-3" T="CustomerVm" ServerData="LoadServerData" @bind-SelectedItem="_selectedCustomer"
    Elevation="0" Bordered=true Dense="true" Hover="true" Breakpoint="Breakpoint.Sm">
    <HeaderContent>
        <MudTh>
            <MudTableSortLabel T="CustomerVm" SortBy="x => x.Name">Name</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel T="CustomerVm">Phone</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel T="CustomerVm">Email</MudTableSortLabel>
        </MudTh>
        <MudTh>
            <MudTableSortLabel T="CustomerVm">Address</MudTableSortLabel>
        </MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Phone">@context.Phone</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
        <MudTd DataLabel="Address">@context.Address</MudTd>
        <MudTd>
            <MudIconButton Size="Size.Small" OnClick="@(async () => await EditDialogAsync(context))"
                Icon="@Icons.Material.Outlined.Edit" Color="Color.Primary" />
            <MudIconButton Size="Size.Small" Icon="@Icons.Material.Outlined.Delete" Color="Color.Warning"
                OnClick="@(async () => await ConfirmAsync(context))" />
        </MudTd>
    </RowTemplate>

    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>


@code {
    private string _searchText = "";
    private CustomerVm? _selectedCustomer;

    // Main server-side data loader
    private async Task<TableData<CustomerVm>> LoadServerData(TableState state, CancellationToken cancellationToken)
    {
        var page = state.Page + 1; // MudTable is 0-based
        var pageSize = state.PageSize;

        var result = await CustomerService.GetAsync(_searchText, page, pageSize);

        var items = result.Data.Select(c => new CustomerVm
        {
            Id = c.Id,
            Name = c.Name,
            Phone = c.Phone,
            Email = c.Email,
            Address = c.Address
        }).ToList();

        return new TableData<CustomerVm>
        {
            Items = items,
            TotalItems = result.Total
        };
    }

    private void OnSearchChanged(string text)
    {
        _searchText = text;
        _ = _table?.ReloadServerData();
    }

    private MudTable<CustomerVm>? _table;

    private void Print() => Snackbar.Add("Print feature not implemented yet.", Severity.Info);

    private async Task ConfirmAsync(CustomerVm customer)
    {
        var parameters = new DialogParameters
{
{ "ContentText", "Are you sure you want to delete this customer?" },
{ "ButtonText", "Yes" },
{ "Color", Color.Success }
};

        var dialog = await DialogService.ShowAsync<ConfirmDialog>("Confirm", parameters, new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.ExtraSmall,
            FullWidth = true
        });

        var result = await dialog.Result;
        if (result is { Canceled: false })
        {
            await CustomerService.DeleteAsync(customer.Id);
            Snackbar.Add("Customer deleted successfully!", Severity.Success);
            await _table!.ReloadServerData();
        }
    }

    private async Task HandleCustomerSavedAsync(CustomerModel? result)
    {
        if (result is not null)
        {
            Snackbar.Add("Customer saved successfully!", Severity.Success);
            await _table!.ReloadServerData();
        }
    }

    private async Task OpenAddDialog()
    {
        var parameters = new DialogParameters
{
{ "Customer", new CustomerModel() },
{ "OnSubmitCompleted", EventCallback.Factory.Create<CustomerModel>(this, HandleCustomerSavedAsync) }
};

        var dialog = await DialogService.ShowAsync<CustomerForm>("Add Customer", parameters, new DialogOptions
        {
            CloseButton = true,
            MaxWidth = MaxWidth.Small,
            FullWidth = true
        });

        var result = await dialog.Result;
        if (result is { Canceled: false })
        {
            Snackbar.Add("Customer saved successfully!", Severity.Success);
            await _table!.ReloadServerData();
        }
    }

    private async Task EditDialogAsync(CustomerVm customer)
    {
        var customerModel = new CustomerModel
        {
            Id = customer.Id,
            Name = customer.Name,
            Email = customer.Email,
            Phone = customer.Phone,
            Address = customer.Address
        };

        var dialog = await DialogService.ShowAsync<CustomerForm>("Edit Customer",
        new DialogParameters
        {
{ "Customer", customerModel },
{ "OnSubmitCompleted", EventCallback.Factory.Create<CustomerModel>(this, HandleCustomerSavedAsync) }
        },
        new DialogOptions { CloseButton = true, MaxWidth = MaxWidth.Small, FullWidth = true });

        var result = await dialog.Result;
        if (result != null && !result.Canceled)
        {
            Snackbar.Add("Customer updated successfully!", Severity.Success);
            await _table!.ReloadServerData();
        }
    }

    private class CustomerVm
    {
        public string Id { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Phone { get; set; } = string.Empty;
        public string Address { get; set; } = string.Empty;
    }
}